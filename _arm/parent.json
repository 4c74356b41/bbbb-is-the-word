        "administratorLoginPassword": {
            "reference": {
              "keyVault": {
                "id": "/subscriptions/c6af39f7-0fce-432b-98cd-c34fe14e6a66/resourceGroups/dckr/providers/Microsoft.KeyVault/vaults/vau1ty"
