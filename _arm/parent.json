        "sku": {
          "value": "[parameters('sku')]"
          },
        "repoUrl": {
          "value": "[parameters('repoUrl')]"
          },
        "branch": {
          "value": "[parameters('branch')]"
          },
        "location": {
          "value": "[parameters('location')]"
          },
        "StorageAccountName": {
          "value": "[variables('storageAccountName')]"
        },
        "administratorLogin": {
            "value": "[parameters('administratorLogin')]"
