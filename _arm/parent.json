{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "trafficManagerName": { "type": "string" },
        "sku": {  "type": "string",
                  "allowedValues": [ "F1", "D1", "B1", "B2", "B3", "S1", "S2", "S3", "P1", "P2", "P3", "P4" ]
               },
    "repoURL": {  "type": "string",
                  "defaultValue": "https://github.com/4c74356b41/bbbb-is-the-word.git"
    },
    "branch": {   "type": "string",
                  "defaultValue": "master"
    },
    "administratorLogin": { "type": "string" },
    "secretName": { "type": "string" },
    "collation": {  "type":  "string",
                    "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "databaseName": { "type": "string" },
    "edition": {  "type": "string",
                  "defaultValue": "basic"
    },
    "requestedServiceObjectiveName": {  "type": "string",
                                        "defaultValue": "basic"
    },
    "location": { "type": "string", 
                  "defaultValue": "westeurope" },
    "replicalocation": {  "type": "string",
                          "defaultValue": "eastus2"},
    "version": {    "type": "string",
                    "defaultValue": "12.0"
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
          "Standard_LRS",
          "Standard_GRS",
          "Standard_ZRS"
      ],
      "metadata": {
          "description": "Storage Account type"
      }
    }
  },
  "variables": {
    "storageAccountName": "[uniqueString(resourceGroup().id)]",
    "primaryWebApp": "[uniqueString(resourceGroup().id, '1')]",
    "secondaryWebApp": "[uniqueString(resourceGroup().id, '2')]",
    "functionWebApp": "[uniqueString(resourceGroup().id, '3')]",
    "primaryHostingPlan": "[uniqueString(resourceGroup().id, '4')]",
    "secondaryHostingPlan": "[uniqueString(resourceGroup().id, '5')]",
    "serverName": "[uniqueString(resourceGroup().id, '6')]",
    "serverReplicaName": "[uniqueString(resourceGroup().id, '7')]"
  },
